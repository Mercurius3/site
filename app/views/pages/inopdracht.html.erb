<h1><%= @page.name %></h1>
<%= Kramdown::Document.new(@page.content).to_html.html_safe if @page.content %>
<table>
<% @products.each do |product| %>
	<tr>
		<td><%= l product.start_date, format: :long %></td>
		<td><%= product.name %></td>
		<td><%= Kramdown::Document.new(product.description).to_html.html_safe %></td>
	</tr>
<% end %>
</table>
<% @products.each do |product| %>
	<p><%= l product.start_date, format: :long %> <%= product.name %><%= Kramdown::Document.new(product.description, options: {parse_span_html: true}).to_html %></p>
<% end %>