<div class="row">
  <div class="large-8 columns">
	<h1><%= @product.name %></h1>
    <p><%= @product.description %></p>
  </div>
  <div class="large-4 columns">
    <ul class="pricing-table">
      <%= @product.price if @product.price %>
      <%= @product.teacher.name if @product.teacher %>
      <%= button %>
    </ul>
    <%= image_tag(@product.picture) if @product.picture %>
  </div>
</div>