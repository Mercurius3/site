<div class="row">
  <div class="large-8 columns">
	<h1><%= @product.name %></h1>
   	<p><%= @product.description %></p>
	<table>
		<% @product.events.each do |event| %>
			<td><%= event.eventdate %></td><td><%= event.starttime %> - <%= event.endtime %></td><td><%= event.name %></td>
		<% end %>
	</table>
  </div>
  <div class="large-4 columns">
    <ul class="pricing-table">
			<li class="title"><%= @product.category.name %>: <%= @product.name %></li>
      <li class="price">&euro;&nbsp;<%= @product.price if @product.price %></li>
      <li class="bullet-item"><%= @product.teacher.name if @product.teacher %></li>
      <li class="cta-button"><%= button %></li>
    </ul>
    <%= image_tag(@product.picture) if @product.picture %>
  </div>
</div>